{
    "manifest_version": 3,
    "name": "Session Manager",
    "version": "1.0",
    "description": "Save, restore, and manage tab sessions with a floating UI.",
    "permissions": ["tabs", "activeTab",
    "scripting", "bookmarks", "storage", "commands"],
    "background": {
      "service_worker": "src/background.js"
    },
    "host_permissions": ["http://*/*", "https://*/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Space",
          "mac": "Command+Space"
        }
      }
    }
  }
  